<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
 <style name="topBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
<!--         <item name="android:background">@drawable/topbar</item> -->
    <style name="main_tab_bottom">
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="login_style" parent="AppBaseTheme"></style>

    <style name="top_bar_style" parent="AppBaseTheme"></style>

    <style name="house_style" parent="AppBaseTheme"></style>

    <style name="login_input_edite" parent="login_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="login_input_style" parent="login_style">
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_marginBottom">20dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="login_text" parent="login_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/holo_blue_bright</item>
    </style>

    <style name="top_bar_limit" parent="top_bar_style">
        <item name="android:layout_marginTop">7dip</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">7dip</item>
    </style>

    <style name="top_bar_linear" parent="top_bar_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="house_item_text" parent="top_bar_style">
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="topbar_text" parent="AppBaseTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
    </style>

    <style name="popwin_anim_style">  
     <item name="android:windowEnterAnimation">@anim/scale</item>  
     <item name="android:windowExitAnimation">@anim/scale_in</item>  
</style>  
    
<style name="detail_text" parent="AppBaseTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
          <item name="android:textSize">14sp</item>
    </style>
    
    <style name="house_anim_style">  
     <item name="android:windowEnterAnimation">@anim/bottom_in</item>  
     <item name="android:windowExitAnimation">@anim/bottom_out</item>  
</style>  
</resources>