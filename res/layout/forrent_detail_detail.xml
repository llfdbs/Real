<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dip" >

    <ImageView
        android:id="@+id/gerentouxiang"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/gerenziliao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_toRightOf="@+id/gerentouxiang"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <TextView
               style="@style/detail_text"
                android:paddingLeft="10dip"
                android:text="姓名：" />

            <TextView
                android:id="@+id/name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <TextView
          style="@style/detail_text"
                android:paddingLeft="10dip"
                android:text="联系方式：" />

            <TextView
                android:id="@+id/forrent_mob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <TextView
               style="@style/detail_text"
                android:paddingLeft="10dip"
                android:text="服务公司：" />

            <TextView
                android:id="@+id/forrent_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </LinearLayout>

   
    </LinearLayout>

    <ImageButton
        android:layout_width="60dip"
        android:layout_height="100dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:background="@null"
        android:id="@+id/forrent_call"
        android:scaleType="centerInside"
        android:src="@drawable/call_phone_select" />

</RelativeLayout>